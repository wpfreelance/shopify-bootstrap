<article class="sheet">
  <div class="register-header features_items">
    <h2 class="title text-center">
    {{ 'customer_accounts.register.page_title' | t }}
   </h2>
 </div>

  <section class="sheet-content">
    <div class="customer-register-form signup-form">

      <div class="customer-register-description">{{ 'customer_accounts.register.description_html' | t }}</div>

      {% form 'create_customer' %}
        {% assign form_errors_message = 'errors.customer_accounts.form_message' | t %}
        {% include 'form_errors' %}

        <div class="form-group">
          <label for="first-name">{{ 'customer_accounts.register.first_name' | t }}</label>
          <input class="form-control input-lg" type="text" value="{{ form.first_name }}" name="customer[first_name]" id="first-name" placeholder="{{ 'customer_accounts.register.first_name' | t }}">
        </div>

        <div class="form-group">
          <label for="last-name">{{ 'customer_accounts.register.last_name' | t }}</label>
          <input class="form-control input-lg" type="text" value="{{ form.lsst_name }}" name="customer[last_name]" id="last-name" placeholder="{{ 'customer_accounts.register.last_name' | t }}">
        </div>

        <div class="form-group {% if form.errors contains 'email' %}has-error{% endif %}">
          <label for="customer_email">{{ 'customer_accounts.register.email' | t }}</label>
          <input class="form-control input-lg" type="email" value="{{ form.email }}" name="customer[email]" id="customer_email" placeholder="{{ 'customer_accounts.register.email' | t }}" autocorrect="off" autocapitalize="off">
        </div>

        <div class="form-group {% if form.errors contains 'password' %}has-error{% endif %}">
          <label for="customer_password">{{ 'customer_accounts.register.password' | t }}</label>
          <input class="form-control input-lg" type="password" value="{{ form.password }}" name="customer[password]" id="customer_password" placeholder="{{ 'customer_accounts.register.password' | t }}">
        </div>

        <div class="form-group">
          {% if form.password_needed %}<p><a href="/account/login#recover">{{ 'customer_accounts.login.reset_link' | t }}</a></p>{% endif %}
          <p>{{ 'customer_accounts.register.login_link' | t | customer_login_link }}</p>
        </div>

        {% if current_url %}<input type="hidden" name="checkout_url" value="{{ current_url }}">{% endif %}
        <input class="btn btn-primary btn-lg" type="submit" value="{{ 'customer_accounts.register.register_button' | t }}">
        <span class="cancel-link">{{ 'customer_accounts.register.note_html' | t: shop_url: shop.url }}</span>
      {% endform %}
    </div>
  </section>
</article>
